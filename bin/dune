;; Web application
(executable
 (name main)
 (public_name photocaml)
 (libraries
  dream
  lwt
  lwt.unix
  caqti
  caqti-lwt
  caqti-lwt.unix
  caqti-driver-postgresql
  dotenv
  uri
  uuidm
  yojson
  photocaml.database)
 (preprocess (pps lwt_ppx))
 (flags (:standard -w -27-33-32-34-37))) ; Disable warnings for unused variables, opens, values, types, constructors

;; Web templates
(rule
 (targets layout.ml)
 (deps layout.eml.html)
 (action (run dream_eml %{deps} --workspace %{workspace_root})))

(rule
 (targets home.ml)
 (deps home.eml.html)
 (action (run dream_eml %{deps} --workspace %{workspace_root})))

